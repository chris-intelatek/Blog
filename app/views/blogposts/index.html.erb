<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>
<div class="row">
  <% @blogposts.each do |blog| %>
  <div class="col-md-6">
    <div class ="panel panel-default">
      <div class="panel-heading">
        <%= link_to blog.title, blog %>
      </div>
      <div class="panel-body">
        By <%= link_to blog.user.username, user_posts_path(id: blog.user.id) %>  on <%= blog.created_at.strftime("%d/%m/%y") %> at <%= blog.created_at.strftime("%I:%M %p") %>
        <p><%= blog.blog_entry[0...250] %>...[<%= link_to "read more", blog %>]</p>
        <p>Updated on <%= blog.updated_at.strftime("%d/%m/%y") %> at <%= blog.updated_at.strftime("%I:%M %p") %></p>
    </div>
      <% if current_user.id == blog.user.id %>
        <div class="panel-footer">
          <%= link_to "Edit", edit_blogpost_path(blog), class: "btn btn-warning" %>   
          <%= link_to "Delete", blog, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
         </div>
      <% end %>
     </div>
   </div>
   <% end %>
 </div>